<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
      android:id="@+id/Clicker_Name"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="10dip"
      android:textColor="#ffffff"
      android:textSize="35sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/counter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/Clicker_Name"
      android:text="Count:"
      android:textSize="25sp" />

  <TextView
      android:id="@+id/number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/counter"
      android:layout_alignBottom="@+id/counter"
      android:layout_toRightOf="@+id/counter"
      android:text="0"
      android:textSize="25sp" />

  <Button
      android:id="@+id/add"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/counter"
      android:text="+"
      android:textSize="60sp" />

  <Button
      android:id="@+id/zero"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/add"
      android:text="Reset Counter" />

  <Button
      android:id="@+id/history"
      style="?android:attr/buttonStyleSmall"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/zero"
      android:text="View Clicker history" />

  <Button
      android:id="@+id/delete"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_below="@+id/rename"
      android:text="Delete" />

  <Button
      android:id="@+id/rename"
      style="?android:attr/buttonStyleSmall"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/history"
      android:text="Rename" />
    
</RelativeLayout>
